<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity" >

    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapView"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/mapView">

        <ImageButton
            android:id="@+id/delayedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_departure_board_24px_white"
            />

        <ImageButton
            android:id="@+id/capacityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_group_add_24px_white"
            />

        <ImageButton
            android:id="@+id/handicapButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_accessible_24px_white"
            />

        <ImageButton
            android:id="@+id/hazardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_warning_24px_white"
            />

    </LinearLayout>

    <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report Status"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:layout_alignBottom="@id/mapView"
        android:id="@+id/reportStatusButton"
    />-->

</RelativeLayout>

